@model SortexAdminV._1.ViewModels.TrendViewModel

@{
    ViewData["Title"] = "CreateTrend";
}

<h4>Lägg till en Trend</h4>
<hr />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTrend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Season" class="control-label">Namn</label>
                <input asp-for="Season" class="form-control" />
                <span asp-validation-for="Season" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beskrivning</label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfImages" class="control-label">Antal bilder</label>
                <input asp-for="NumberOfImages" class="form-control" />
                <span asp-validation-for="NumberOfImages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Tillbaka</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
