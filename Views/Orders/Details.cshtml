@model SortexAdminV._1.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Detaljer</h1>
<div class="card w-100">
    <h4 class="card-img-top text-center text-black font-weight-bold pt-2 pb-1">@Model.Name</h4>
    <div class="card-body">
        <h5 class="card-title">Datum </h5>
        <p class="card-title">Start: @Model.Start</p>
        <p class="card-title">Slut:  @Model.End</p>
        <p class="line"></p>
        <h5 class="card-title">Kontakt </h5>
        <p class="card-title">@Model.Contact</p>
        <p class="line"></p>
        <h5 class="card-title">Beskrivning</h5>
        <p class="card-text">@Model.Description</p>
        <p class="line"></p>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Ändra</a>
        <a class="btn btn-primary" asp-action="Index">Tillbaka</a>
    </div>
</div>
