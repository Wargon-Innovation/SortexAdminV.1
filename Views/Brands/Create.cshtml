@model SortexAdminV._1.ViewModels.BrandUploadViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Skapa ny</h1>

<h4>Brand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label">Tillverkare</label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">Kön</label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classification" class="control-label">Klassificering</label>
                <input asp-for="Classification" class="form-control" />
                <span asp-validation-for="Classification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label">
                    Taggar <span class="small">(separera varje enskild tagg med ett mellanrum)</span>
                </label>
                <textarea asp-for="Tags" class="form-control" rows="2" cols="20"></textarea>
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfImages" class="control-label">Antal bilder att ladda upp</label>
                <input asp-for="NumberOfImages" class="form-control" />
                <span asp-validation-for="NumberOfImages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Tillbaka</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
