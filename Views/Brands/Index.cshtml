@model IEnumerable<SortexAdminV._1.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Skapa ny</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                Tillverkare
            </th>
            <th>
                Kön
            </th>
            <th>
                Klassificering
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classification)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a>
                <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
