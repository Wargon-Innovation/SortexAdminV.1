@model SortexAdminV._1.Models.Modeboard

@{
    ViewData["Title"] = "Details";
}

<h1>Detaljer</h1>
<div class="card">
    <h4 class="card-img-top text-center text-black font-weight-bold pt-2 pb-1">@Model.Name</h4>
    <div class="card-body">
        <h4 class="card-title">Namn </h4>
        <h6 class="card-title">@Model.Name</h6>
        <h4 class="card-title">Beskrivning </h4>
        <h6 class="card-title">@Model.Description</h6>
        <h4 class="card-title">Image</h4>
        <h6 class="card-text">@Model.Image</h6>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Ändra</a>
        <a class="btn btn-primary" asp-action="Index">Tillbaka</a>
    </div>
</div>
